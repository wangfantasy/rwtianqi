<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="0dp"
    android:layout_height="77.0dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25.0dip"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20.0dip"
        android:clickable="true"
        android:focusable="false" />

    <View
        android:id="@+id/view_bottomLine"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="#555" />

    <TextView
        android:id="@+id/text_title"
        android:text="title"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/settings_item_title"
        android:textSize="15.0sp"
        android:layout_alignTop="@+id/check_box"
        android:layout_alignLeft="@+id/text_desc"
        android:layout_alignStart="@+id/text_desc" />

    <TextView
        android:id="@+id/text_desc"
        android:text="desc"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/settings_item_desc"
        android:textSize="13.0sp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/view_bottomLine"
        android:layout_alignStart="@+id/view_bottomLine" />
</RelativeLayout>